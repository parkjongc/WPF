<UserControl x:Name="mainView" x:Class="DanawaRClient.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanawaRClient.Views"
             
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:linechart="clr-namespace:DanawaRClient.Views.UserControls" xmlns:viewmodels="clr-namespace:DanawaRClient.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
             mc:Ignorable="d" 
             Height="990" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="110"/>
            <!-- 온도 표시 때문에 Row 하나 더 추가-->
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="다나와 리소스" VerticalAlignment="Bottom" Margin="10 0"  
                       Style="{StaticResource titleText}"></TextBlock>
            <Button Style="{StaticResource menuButton}"
                    Click="ExitButton_Click"
                    Height="20" Width="20"
                    VerticalAlignment="Bottom"
                    Margin="200 0 20 0"
                    ToolTip="Close">
                <Icon:PackIconMaterial Kind="Power"
                                       Style="{StaticResource menuButtonIcon}"/>
            </Button>
        </StackPanel>

        <!-- CPU UI-->
        <Border Style="{StaticResource mainBorder}" Grid.Row="1" Grid.Column="0" Margin="15 20 15 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="200"/>
                    <!-- 차트 공간 -->
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="CPU" Style="{StaticResource titleText}" Margin="5 0 0 0"
                   VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <!-- CPU 수치 나타내는 막대 바 -->
                <ProgressBar x:Name="cpuProgressBar" Grid.Column="1" Grid.ColumnSpan="3"
                     Style="{DynamicResource ProgressBarStyle}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Width="90" Height="6" Minimum="0" Maximum="100"/>

                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Name="cpuLabel" Grid.Column="0"
                   Foreground="#fcfafa" FontSize="15"
                   FontWeight="SemiBold"
                   VerticalContentAlignment="Center"
                   Padding="0"
                   ContentStringFormat="{}{0:F1}"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"/>
                    <TextBlock Text="%" Grid.Column="1" Foreground="#fcfafa" FontSize="15"
                       Margin="3 8 5 8" VerticalAlignment="Center" FontWeight="SemiBold"
                       HorizontalAlignment="Right"/>
                </Grid>

                <!-- CPU 차트 추가 -->
                <linechart:LineChart x:Name="cpuLineChart"
                     Grid.Row="1" Grid.ColumnSpan="4"
                     Margin="0 10 0 0"/>
            </Grid>
        </Border>
        <!-- RAM UI -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="2" Grid.Column="0" Margin="15 10 15 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="RAM" Style="{StaticResource titleText}" Margin="5 0 0 0"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <!-- RAM 수치 나타내는 막대 바??? -->
                <ProgressBar x:Name="ramProgressBar"
                             Grid.Column="1" Grid.ColumnSpan="3"
                             Style="{DynamicResource ProgressBarStyle}"
                             VerticalAlignment="Center" HorizontalAlignment="Center"
                             Width="90" Height="6" Minimum="0" Maximum="100"/>

                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--RAM 수치 (%) 나타내는 레이블-->
                    <Label Name="ramLabel" Grid.Column="0"
                           Foreground="#fcfafa" FontSize="15"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           HorizontalContentAlignment="Right"/>
                    <!-- % 표시 -->
                    <TextBlock Text="%" Grid.Column="1" Foreground="#fcfafa" FontSize="15"
                               Margin="3 8 5 8" VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right"/>
                </Grid>
                <!-- 구분선 표시 -->
                <Separator Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                           VerticalAlignment="Bottom"
                           Margin="5 0 5 0"
                           BorderBrush="#464a63" BorderThickness="0.8"/>
                <!-- used,free 텍스트블럭 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Used"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Free"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <!-- RAM 사용 크기 반영되는 Label -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Label x:Name="ramUsedLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
                <!-- RAM 남은 크기 반영되는 Label -->
                <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Label x:Name="ramFreeLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- 하드 사용량 -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="3" Margin="15 10 15 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Disk Usage" Grid.ColumnSpan="2" Style="{StaticResource titleText}"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Separator Grid.Row="0" Grid.ColumnSpan="4" VerticalAlignment="Bottom"
                           Margin="5 0 5 0"
                           BorderBrush="#464a63" BorderThickness="0.8"/>
                <!-- ToTal Disk Space -->
                <TextBlock Text="Total Disk Space" Grid.Row="2" Grid.ColumnSpan="2"
                           Style="{StaticResource titleText}" FontSize="14"
                           VerticalAlignment="Top" HorizontalAlignment="Center"/>
                <!-- 값이 반영되지 않음 주의 DataContext="{Binding diskSpaceTotal}" -->
                <linechart:Gauge x:Name="diskTotalGauge"
                                 Grid.Row="2" Grid.RowSpan="4" Grid.ColumnSpan="2" 
                                 GaugeValue="{Binding DiskTotalGaugeValue}"
                                 Radius="60"
                                 Foreground1="#0a7af2"
                                 Foreground2="#05f4fc"/>

                <Label x:Name="diskSpaceTotalLabel"
                       Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2"
                       Foreground="#fcfafa" FontSize="15" FontWeight="SemiBold"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Padding="0"
                       ContentStringFormat="{}{0:P1}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Used"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal">
                    <Label x:Name="usedSpaceTotalLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 0 0 0"/>
                </StackPanel>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="Free"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
                    <Label x:Name="freeSpaceTotalLabel" 
                           Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 0 0 0"/>
                </StackPanel>

                <!-- 세로 구분선 -->
                <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="6" Orientation="Horizontal">
                    <Separator Margin="10 0 0 5" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                               BorderBrush="#464a63" BorderThickness="0.6">
                    </Separator>
                </StackPanel>

                <!-- C: 사용량 -->
                <TextBlock Text="Disk C" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                           Style="{StaticResource titleText}" FontSize="12"
                           VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

                <linechart:Gauge x:Name="diskCGauge"
                                 Grid.Row="2" Grid.Column="2" 
                                 Grid.RowSpan="2" Grid.ColumnSpan="2"
                                 Radius="35"
                                 Foreground1="#0a7af2"
                                 Foreground2="#fa6e02"/>

                <Label x:Name="diskCLabel"
                       Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2"
                       Foreground="#fcfafa" FontSize="15" FontWeight="SemiBold"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Padding="0"
                       ContentStringFormat="{}{0:P1}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- D: 사용량 -->
                <TextBlock Text="Disk D" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
                           Style="{StaticResource titleText}" FontSize="12"
                           VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

                <linechart:Gauge x:Name="diskDGauge" 
                                 Grid.Row="5" Grid.Column="2"
                                 Grid.RowSpan="2" Grid.ColumnSpan="2" 
                                 Radius="35"
                                 Foreground1="#0a7af2"
                                 Foreground2="#ed0a02"/>
                <Label x:Name="diskDLabel"
                       Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2"
                       Foreground="#fcfafa" FontSize="15" FontWeight="SemiBold"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                       Padding="0"
                       ContentStringFormat="{}{0:P1}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Network -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="4" Margin="15 10 15 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="NetWork" Style="{StaticResource titleText}" Margin="5 0 0 0"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <Separator Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Bottom"
                           Margin="5 0 5 0"
                           BorderBrush="#464a63" BorderThickness="0.8"/>
                <!-- 업로드 속도 체크 -->
                <TextBlock Text="Sent"
                           Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                    <Label x:Name="networkSentBytesLabel"
                           Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="Mb/s" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
                <!-- 다운로드 속도 체크 -->
                <TextBlock Text="Received"
                           Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="5 0 0 0"
                           Foreground="#464a63"/>
                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
                    <Label x:Name="networkReceivedBytesLabel"
                           Foreground="#fcfafa" FontSize="14" FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0"/>
                    <TextBlock Text="Mb/s" Foreground="#fcfafa" FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center" HorizontalAlignment="Right"
                               Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Temperature -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="5" Margin="15 10 15 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Temperature" Style="{StaticResource titleText}"
                   Margin="5 0 0 0"
                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Label x:Name="temperature"
                   Foreground="#fcfafa" FontSize="14" FontWeight="SemiBold"
                   VerticalContentAlignment="Center"
                   Padding="0"
                   ContentStringFormat="{}{0:F1}"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5 0 0 0"/>
                    <TextBlock Text="°C" Foreground="#fcfafa" FontSize="14" FontWeight="SemiBold"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Padding="0"
                       Margin="5 1 0 0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
